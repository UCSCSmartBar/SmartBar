
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#ff440099"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.trider.smartbarui.DispensingScreen">



    <Button
        style="@style/CityTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maintenance           >"
        android:padding="20dp"
        android:background="@drawable/cust_butt"
        android:onClick="GoToDispensing"
        android:id="@+id/calibrate_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="@style/CityTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="System modes         >"
        android:padding="20dp"
        android:background="@drawable/cust_butt"
        android:onClick="GoToDispensing"
        android:id="@+id/disp_system"
        android:layout_below="@+id/calibrate_button"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />

</RelativeLayout>
