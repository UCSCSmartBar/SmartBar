<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:style="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"

    android:background="@drawable/san_fran_city_scape"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tylerrider.raspgui.ConfirmDrink">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="500dp"
        android:orientation="vertical">


        <TextView android:text="Your Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="40sp"
            android:layout_gravity="center"
            />

        <Button
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="150dp"
            android:layout_gravity="center"
            android:background="@drawable/pour_drink_off"
            style="@style/PinKey"
            android:text="Place Cup"
            android:textSize="50sp"
            android:textColor="@color/white"

            android:id="@+id/pourdrinkBut"
            android:onClick="PourDrink"
            />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="165dp"
            android:id="@+id/pour_progress"/>
<!--
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PinKey"
            android:text="No"
            android:id="@+id/button10"
            android:onClick="No"
            />
        -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="600dp"
        android:layout_marginStart="150dp"
        android:background="#22ffffff"
        android:orientation="vertical"
        >
        <TextView
            android:text="Your Drink Order"
            android:id="@+id/drink_listing"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:text="$"
            android:id="@+id/price_listing"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="50sp"
            />
        <ImageView
            android:layout_width="280dp"
            android:layout_height="330dp"
            android:layout_margin="35dp"
            android:background="#00000000"
            android:id="@+id/imageView"
            android:src="@drawable/whiskeysour"
             />

    </LinearLayout>

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New ToggleButton"
        android:id="@+id/toggleButton7"
        android:layout_gravity="center_vertical" />

</LinearLayout>

