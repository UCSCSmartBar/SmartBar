<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1024dp"
    android:layout_height="600dp"

    android:textColor="@color/white"
    android:background="@drawable/cityscape_fullblur"
    android:orientation="vertical"
    tools:context="com.example.trider.smartbarui.PickUpDrink"
    android:weightSum="1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#5500002f">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome, Please Enter Your 11-Digit Phone Number"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:id="@+id/textView4"
        />
    <TextView
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Buffer:"
        android:textColor="@color/white"
        android:id="@+id/drinkView2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
         android:layout_marginTop="0dp"
        android:orientation="horizontal">
        <Button
            style="@style/PinKey"
            android:text="back"
            android:onClick="GoBack"
            android:id="@+id/Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                style="@style/PinKey"
                android:text="1"
                android:onClick="EnterPin"
                android:id="@+id/keyOne"
                android:layout_column="0"
                android:layout_row="0"
                />
            <Button
                style="@style/PinKey"
                android:onClick="EnterPin"
                android:layout_column="1"
                android:layout_row="0"
                android:text="2"
                android:id="@+id/keyTwo"
                />
            <Button
                style="@style/PinKey"
                android:layout_column="2"
                android:layout_row="0"
                android:onClick="EnterPin"
                android:id="@+id/keyThree"
                android:text="3"
                />
            <Button
                style="@style/PinKey"
                android:text="4"
                android:layout_column="0"
                android:layout_row="1"
                android:onClick="EnterPin"
                android:id="@+id/keyFour"
                />
            <Button
                style="@style/PinKey"
                android:text="5"
                android:layout_column="1"
                android:layout_row="1"
                android:onClick="EnterPin"
                android:id="@+id/keyFive"
                />
            <Button
                style="@style/PinKey"
                android:text="6"
                android:onClick="EnterPin"
                android:layout_column="2"
                android:layout_row="1"
                android:id="@+id/keySix"
                />
            <Button
                style="@style/PinKey"
                android:text="7"
                android:layout_column="0"
                android:layout_row="2"
                android:onClick="EnterPin"
                android:id="@+id/keySeven"
                />
            <Button
                style="@style/PinKey"
                android:text="8"
                android:layout_column="1"
                android:layout_row="2"
                android:onClick="EnterPin"
                android:id="@+id/keyEight"
                />
            <Button
                style="@style/PinKey"
                android:text="9"
                android:layout_column="2"
                android:layout_row="2"
                android:onClick="EnterPin"
                android:id="@+id/keyNine"
                />
            <Button
                style="@style/PinKey"
                android:text="0"
                android:onClick="EnterPin"
                android:layout_column="1"
                android:layout_row="3"
                android:id="@+id/keyZero"
                />
            <Button
                style="@style/PinKey"
                android:text="Back"
                android:onClick="EnterPin"
                android:layout_column="0"
                android:layout_row="3"
                android:id="@+id/keyBack"
                />
            <Button
                style="@style/PinKey"
                android:text="Enter"
                android:layout_column="2"
                android:onClick="EnterPin"
                android:layout_row="3"
                android:id="@+id/keyEnter"
                />
        </GridLayout>


        <TextView
            android:text="Phone"
            android:layout_width="220dp"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            android:padding="10dp"

            android:layout_marginLeft="0dp"
            android:layout_marginTop="100dp"
            android:hint="Phone"
            android:background="@drawable/cust_butt"
            android:id="@+id/enterField" />


     </LinearLayout>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/findUserProgress"
            />
           <!-- android:layout_marginLeft="375dp"-->

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:onClick="SkipToPickFinger"
            android:id="@+id/button16"
            android:layout_gravity="right" />

    </LinearLayout>
</LinearLayout>
