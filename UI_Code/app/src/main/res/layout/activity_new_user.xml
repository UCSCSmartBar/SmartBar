<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="1024dp"
    android:layout_height="600dp"

    android:textColor="@color/white"
    android:background="@drawable/cityscape_fullblur"
    android:id="@+id/new_user_layout"
    android:orientation="vertical"
    tools:context="com.example.trider.smartbarui.NewUser"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#00000000">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginStart="0dp"
            android:text="Identity not recognized, Please Enter Your 11-Digit Phone Number"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:id="@+id/textView4"
            />

        <TextView
                android:layout_width="400dp"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text=""
                android:textColor="@color/white"
                android:id="@+id/drinkView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="0dp">
            <Button
                style="@style/PinKey"
                android:text="Return"
                android:onClick="GoBack"
                android:id="@+id/Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    style="@style/PinKey"
                    android:text="1"
                    android:onClick="EnterPin"
                    android:id="@+id/keyOne"
                    android:layout_column="0"
                    android:layout_row="0"
                    />
                <Button
                    style="@style/PinKey"
                    android:onClick="EnterPin"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:text="2"
                    android:id="@+id/keyTwo"
                    />
                <Button
                    style="@style/PinKey"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:onClick="EnterPin"
                    android:id="@+id/keyThree"
                    android:text="3"
                    />
                <Button
                    style="@style/PinKey"
                    android:text="4"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:onClick="EnterPin"
                    android:id="@+id/keyFour"
                    />
                <Button
                    style="@style/PinKey"
                    android:text="5"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:onClick="EnterPin"
                    android:id="@+id/keyFive"
                    />
                <Button
                    style="@style/PinKey"
                    android:text="6"
                    android:onClick="EnterPin"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:id="@+id/keySix"
                    />
                <Button
                    style="@style/PinKey"
                    android:text="7"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:onClick="EnterPin"
                    android:id="@+id/keySeven"
                    />
                <Button
                    style="@style/PinKey"
                    android:text="8"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:onClick="EnterPin"
                    android:id="@+id/keyEight"
                    />
                <Button
                    style="@style/PinKey"
                    android:text="9"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:onClick="EnterPin"
                    android:id="@+id/keyNine"
                    />
                <Button
                    style="@style/PinKey"
                    android:text="0"
                    android:onClick="EnterPin"
                    android:layout_column="1"
                    android:layout_row="3"
                    android:id="@+id/keyZero"
                    />
                <Button
                    style="@style/PinKey"
                    android:text="Back"
                    android:onClick="EnterPin"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:id="@+id/keyBack"
                    />
                <Button
                    style="@style/PinKey"
                    android:text="Enter"
                    android:layout_column="2"
                    android:onClick="EnterPin"
                    android:layout_row="3"
                    android:id="@+id/keyEnter"
                    />
            </GridLayout>
            <TextView
                android:text=" Phone#"
                android:layout_width="250dp"
                android:layout_marginTop="100dp"
                android:textSize="30sp"
                android:layout_height="50dp"
                android:paddingTop="6dp"
                android:hint="Phone#"
                android:textColor="@color/white"
                android:background="@drawable/cust_butt"
                android:id="@+id/enterField" />
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="-150dp"
                android:layout_marginTop="200dp"
                android:id="@+id/newUserProgress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                style="@style/PinKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:onClick="GoToRegister"
                android:id="@+id/new_user_skip"
                android:layout_marginStart="850dp" />
        </LinearLayout>

       </LinearLayout>
</LinearLayout>
