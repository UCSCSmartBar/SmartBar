


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.trider.smartbarui.TestKeyBoard">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                style="@style/PinKey"
                android:text="1"

                android:onClick="EnterPin"
                android:id="@+id/keyOne"
                android:layout_column="0"
                android:layout_row="0"
                 />

            <Button
                style="@style/PinKey"

                android:onClick="EnterPin"
                android:layout_column="1"
                android:layout_row="0"

                android:text="2"
                android:id="@+id/keyTwo"
                />

            <Button
                style="@style/PinKey"
                android:layout_column="2"
                android:layout_row="0"

                android:onClick="EnterPin"

                android:id="@+id/keyThree"
                android:text="3"
              />

            <Button
                style="@style/PinKey"
                android:text="4"
                android:layout_column="0"
                android:layout_row="1"
                android:onClick="EnterPin"
                android:id="@+id/keyFour"
                />

            <Button
                style="@style/PinKey"
                android:text="5"
                android:layout_column="1"
                android:layout_row="1"
                android:onClick="EnterPin"
                android:id="@+id/keyFive"
                />

            <Button
                style="@style/PinKey"
                android:text="6"
                android:onClick="EnterPin"
                android:layout_column="2"
                android:layout_row="1"

                android:id="@+id/keySix"
                 />



            <Button
                style="@style/PinKey"
                android:text="7"
                android:layout_column="0"
                android:layout_row="2"
                android:onClick="EnterPin"
                android:id="@+id/keySeven"
                 />

            <Button
                style="@style/PinKey"
                android:text="8"
                android:layout_column="1"
                android:layout_row="2"
                android:onClick="EnterPin"
                android:id="@+id/keyEight"
                 />

            <Button
                style="@style/PinKey"
                android:text="9"
                android:layout_column="2"
                android:layout_row="2"
                android:onClick="EnterPin"
                android:id="@+id/keyNine"
                />

            <Button
                style="@style/PinKey"
                android:text="0"
                android:onClick="EnterPin"
                android:layout_column="1"
                android:layout_row="3"
                android:id="@+id/keyZero"
                />

            <Button
                style="@style/PinKey"
                android:text="Back"
                android:onClick="EnterPin"
                android:layout_column="0"
                android:layout_row="3"
                android:id="@+id/keyBack"
                 />

            <Button
                style="@style/PinKey"
                android:text="Enter"
                android:layout_column="2"
                android:onClick="EnterPin"
                android:layout_row="3"
                android:id="@+id/keyEnter"
                 />
        </GridLayout>

    <TextView
        android:text=""
        android:layout_width="200dp"
        android:textSize="30sp"
        android:layout_height="50dp"
        android:hint="Phone#"
        android:id="@+id/enterField" />

</LinearLayout>
