


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.trider.smartbarui.TestKeyBoard">


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                style="@style/PinKey"
                android:text="1"

                android:onClick="EnterPin"
                android:id="@+id/keyOne"
                android:layout_column="0"
                android:layout_row="0"
                 />

            <Button
                style="@style/PinKey"

                android:onClick="EnterPin"
                android:layout_column="1"
                android:layout_row="0"

                android:text="2"
                android:id="@+id/keyTwo"
                />

            <Button
                style="@style/PinKey"
                android:layout_column="2"
                android:layout_row="0"

                android:onClick="EnterPin"

                android:id="@+id/keyThree"
                android:text="3"
              />

            <Button
                style="@style/PinKey"
                android:text="4"
                android:layout_column="0"
                android:layout_row="1"
                android:onClick="EnterPin"
                android:id="@+id/keyFour"
                />

            <Button
                style="@style/PinKey"
                android:text="5"
                android:layout_column="1"
                android:layout_row="1"
                android:onClick="EnterPin"
                android:id="@+id/keyFive"
                />

            <Button
                style="@style/PinKey"
                android:text="6"
                android:onClick="EnterPin"
                android:layout_column="2"
                android:layout_row="1"

                android:id="@+id/keySix"
                 />



            <Button
                style="@style/PinKey"
                android:text="7"
                android:layout_column="0"
                android:layout_row="2"
                android:onClick="EnterPin"
                android:id="@+id/keySeven"
                 />

            <Button
                style="@style/PinKey"
                android:text="8"
                android:layout_column="1"
                android:layout_row="2"
                android:onClick="EnterPin"
                android:id="@+id/keyEight"
                 />

            <Button
                style="@style/PinKey"
                android:text="9"
                android:layout_column="2"
                android:layout_row="2"
                android:onClick="EnterPin"
                android:id="@+id/keyNine"
                />

            <Button
                style="@style/PinKey"
                android:text="0"
                android:onClick="EnterPin"
                android:layout_column="1"
                android:layout_row="3"
                android:id="@+id/keyZero"
                />

            <Button
                style="@style/PinKey"
                android:text="Back"
                android:onClick="EnterPin"
                android:layout_column="0"
                android:layout_row="3"
                android:id="@+id/keyBack"
                 />

            <Button
                style="@style/PinKey"
                android:text="Enter"
                android:layout_column="2"
                android:onClick="EnterPin"
                android:layout_row="3"
                android:id="@+id/keyEnter"
                 />

            <TextView
                android:text=""
                android:layout_width="100dp"
                android:textSize="20sp"
                android:layout_height="50dp"
                android:hint="Phone#"
                android:id="@+id/enterField"
                android:layout_row="4"
                android:layout_column="0"/>
        </GridLayout>



    <com.androidplot.xy.XYPlot
        android:id="@+id/mySimpleXYPlot"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        androidPlot.title="A Simple XY Plot"
        androidPlot.domainLabel="Domain"
        androidPlot.rangeLabel="Range"
        androidPlot.titleWidget.labelPaint.textSize="@dimen/title_font_size"
        androidPlot.domainLabelWidget.labelPaint.textSize="@dimen/domain_label_font_size"
        androidPlot.rangeLabelWidget.labelPaint.textSize="@dimen/range_label_font_size"
        androidPlot.graphWidget.marginTop="20dp"
        androidPlot.graphWidget.marginLeft="15dp"
        androidPlot.graphWidget.marginBottom="25dp"
        androidPlot.graphWidget.marginRight="10dp"
        androidPlot.graphWidget.rangeLabelPaint.textSize="@dimen/range_tick_label_font_size"
        androidPlot.graphWidget.rangeOriginLabelPaint.textSize="@dimen/range_tick_label_font_size"
        androidPlot.graphWidget.domainLabelPaint.textSize="@dimen/domain_tick_label_font_size"
        androidPlot.graphWidget.domainOriginLabelPaint.textSize="@dimen/domain_tick_label_font_size"
        androidPlot.legendWidget.textPaint.textSize="@dimen/legend_text_font_size"
        androidPlot.legendWidget.iconSizeMetrics.heightMetric.value="15dp"
        androidPlot.legendWidget.iconSizeMetrics.widthMetric.value="15dp"
        androidPlot.legendWidget.heightMetric.value="25dp"
        androidPlot.legendWidget.positionMetrics.anchor="right_bottom"
        androidPlot.graphWidget.gridLinePaint.color="#000000"/>


</LinearLayout>
