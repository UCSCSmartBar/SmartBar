        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="60dp"-->
        <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
        <!--android:text="Medium Text"-->
        <!--android:id="@+id/cont_tview"/>-->
    </LinearLayout>