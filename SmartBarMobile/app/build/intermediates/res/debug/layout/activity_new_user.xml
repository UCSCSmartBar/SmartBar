<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_user_activity"
    android:background="@drawable/appbackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".NewUserActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/welcome_new_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="@string/welcome_new_user1"
            android:typeface="serif"
            android:textColor="@color/bt_white"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25sp" />

        <View
            android:id="@+id/bar_separator"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="#C0C0C0"/>

        <TextView
            android:id="@+id/new_user_prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/welcome_new_user2"
            android:typeface="serif"
            android:textColor="@color/bt_white"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/enter_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_login"
            android:typeface="serif"
            android:textColor="@color/bt_white"
            android:labelFor="@+id/type_username"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/type_username"
            android:textColor="@color/bt_white"
            android:inputType="text"
            android:typeface="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/enter_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_password"
            android:typeface="serif"
            android:textColor="@color/bt_white"
            android:labelFor="@+id/type_password"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/type_password"
            android:textColor="@color/bt_white"
            android:inputType="textPassword"
            android:typeface="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/reenter_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reenter_password"
            android:typeface="serif"
            android:textColor="@color/bt_white"
            android:labelFor="@+id/retype_password"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/retype_password"
            android:inputType="textPassword"
            android:typeface="serif"
            android:textColor="@color/bt_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/enter_email"
            android:textColor="@color/bt_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_email"
            android:typeface="serif"
            android:labelFor="@+id/type_email"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/type_email"
            android:textColor="@color/bt_white"
            android:inputType="textEmailAddress"
            android:typeface="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/enter_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_age"
            android:typeface="serif"
            android:textColor="@color/bt_white"
            android:labelFor="@+id/type_age"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <EditText
            android:id="@+id/type_age"
            android:textColor="@color/bt_white"
            android:inputType="number"
            android:typeface="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/enter_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enter_sex"
            android:typeface="serif"
            android:textColor="@color/bt_white"
            android:layout_marginTop="10dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Spinner
            android:id="@+id/type_sex"
            android:textColor="@color/bt_white"
            android:typeface="serif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />


        <Button
            android:id="@+id/login_button"
            style="@style/PinKey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/verify_button"
            android:typeface="serif"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" />

    </LinearLayout>

</ScrollView>
